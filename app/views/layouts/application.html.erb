<!DOCTYPE html>
<html>
  <head>
    <title>StMovieWeb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag 'application', :media => "all", 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js"></script>

  </head>

  <body class="minimal pushable">
    
    <!-- Menu -->
    
    <div class="ui sidebar right inverted vertical menu is-mb">
      
        <%= link_to("Logo", "/", class:"item") %>
        <%= link_to("MovieList", "/", class:"item") %>
        <%= link_to("Upload", "/posts/new", class:"item") %>
        <%= link_to("UserList", "/users/index", class:"item") %>
    </div>

    <div class="ui large top fixed inverted menu">
      <div class="ui container">
        <%= link_to "/", class:"header item" do %>
          Logo
          <img src="" art="Logo">
        <% end %>
        <div class="right menu">
          <%= link_to("MovieList", "/", class:"item is-cp") %>
          <%= link_to("Upload", "/posts/new", class:"item is-cp") %>
          <%= link_to("UserList", "/users/index", class:"item is-cp") %>

          <div id="js-sidebar" class="launch icon item is-mb">
            <i class="sidebar icon"></i>
          </div>
        </div>

      </div>
    </div>
    <!-- Menu End-->

    <!-- Main -->      
    <div class="pusher">
      <% if flash[:notice] %><div class="flash"><%= flash[:notice] %></div><% end %>

      <%= yield %>
    </div>
     </div>
    <!-- Main End -->


    <script>
      // Semantic UI
      $('#js-sidebar').click( () => {
        $('.ui.sidebar').sidebar('toggle');
      });
      $('.ui.accordion').accordion();
      

    </script>
    <%= javascript_pack_tag 'message' %>

  </body>
  
</html>
